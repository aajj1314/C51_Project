{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C51 Build Project",
            "type": "shell",
            "command": "sdcc",
            "args": [
                "src/main.c",
                "-Iinc",
                "-mmcs51",
                "--opt-code-size",
                "--out-fmt-ihx",
                "-o",
                "build/main.hex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf build/*",
            "group": "build"
        }
    ]
}